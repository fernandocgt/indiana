    <!-- SCRIPT FIREBASE E LÓGICA -->
    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/10.8.0/firebase-app.js";
        import { getFirestore, collection, addDoc, serverTimestamp } from "https://www.gstatic.com/firebasejs/10.8.0/firebase-firestore.js";

        // Configuração capturada do seu código original
        const firebaseConfig = {
            apiKey: "AIzaSyC5aXTHrFD5Vw-AyeDhmj85VwN2vmlsLk4",
            authDomain: "indiana-dd5bf.firebaseapp.com",
            projectId: "indiana-dd5bf",
            storageBucket: "indiana-dd5bf.firebasestorage.app",
            messagingSenderId: "1066097977043",
            appId: "1:1066097977043:web:c77f739077af6b75b1626"
        };

        const app = initializeApp(firebaseConfig);
        const db = getFirestore(app);

        // Função de Registro corrigida
        async function registrarVenda() {
            const btn = document.getElementById('btn_confirmar');
            
            try {
                // Captura os valores exatos
                const lote = document.getElementById('lote_id').value;
                const comissao = document.getElementById('comissao_id').value;
                const valorTotal = document.getElementById('valor_total_id').value;
                const comprador = document.getElementById('comprador_id').value;

                // Validação
                if (!lote || !valorTotal) {
                    alert("⚠️ Por favor, preencha o número do lote e o valor do arremate.");
                    return;
                }

                // Feedback visual de carregamento
                btn.disabled = true;
                btn.innerText = "REGISTRANDO...";
                btn.classList.add('opacity-50');

                console.log("Salvando venda no Firebase...");

                // Envia para a coleção "vendas"
                const docRef = await addDoc(collection(db, "vendas"), {
                    lote: lote,
                    comissao: comissao || "0",
                    valorTotal: Number(valorTotal),
                    comprador: comprador || "Não informado",
                    dataVenda: serverTimestamp(),
                    status: "Vendido"
                });

                alert("✅ Venda registrada com sucesso no sistema!");
                
                // Limpa os campos
                document.getElementById('lote_id').value = "";
                document.getElementById('valor_total_id').value = "";
                document.getElementById('comprador_id').value = "";

            } catch (error) {
                console.error("Erro Firebase:", error);
                alert("❌ Erro ao salvar: " + error.message);
            } finally {
                // Restaura o botão
                btn.disabled = false;
                btn.innerHTML = '<span class="material-symbols-outlined text-3xl">check_circle</span> CONFIRMAR VENDA';
                btn.classList.remove('opacity-50');
            }
        }

        // Event Listener
        document.getElementById('btn_confirmar').addEventListener('click', registrarVenda);
    </script>
